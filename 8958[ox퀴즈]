list_a = list()
n = int(input())
for i in range(n):
    list_a.append(list(input()))
for i in range(0, n):
    sum = 0
    count = 0
    for j in range(0,len(list_a[i])):
        if list_a[i][j] == "O":
            count = count + 1
            sum = sum + count
        else:
            count = 0
    print(sum)
